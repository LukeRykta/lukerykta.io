# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
indent_size = 2
# enforce quotes via ESLint/Prettier, not EditorConfig
ij_typescript_use_double_quotes = false  # JetBrains-specific

[*.java]
indent_size = 4

[*.tf]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false