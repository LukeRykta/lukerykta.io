{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "name": "backend",
  "root": "backend",
  "sourceRoot": "backend/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/gradle.mjs bootRun"
      },
      "cache": false
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/gradle.mjs build",
        "forwardAllArgs": true
      },
      "outputs": [
        "backend/build/libs",
        "backend/build/reports",
        "backend/build/classes",
        "backend/build/resources"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/gradle.mjs test",
        "forwardAllArgs": true
      },
      "outputs": [
        "backend/build/test-results",
        "backend/build/reports/tests",
        "backend/build/reports/jacoco",
        "backend/build/jacoco"
      ]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/gradle.mjs clean"
      }
    }
  },
  "tags": []
}
